# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=url_shortener
DB_USER=postgres
DB_PASSWORD=password
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CLUSTER_NODES=localhost:7000,localhost:7001,localhost:7002
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_KEY_SECRET=your-api-key-secret-change-this-in-production
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=url-shortener-service
KAFKA_CONNECTION_TIMEOUT=3000
KAFKA_REQUEST_TIMEOUT=30000
KAFKA_INITIAL_RETRY_TIME=100
KAFKA_RETRIES=8
KAFKA_SSL_ENABLED=false
KAFKA_SASL_MECHANISM=
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# Kafka Topics Configuration
KAFKA_URL_CLICKS_PARTITIONS=6
KAFKA_REPLICATION_FACTOR=1
KAFKA_URL_CLICKS_RETENTION=604800000

# Kafka Consumer Configuration
KAFKA_SESSION_TIMEOUT=30000
KAFKA_REBALANCE_TIMEOUT=60000
KAFKA_HEARTBEAT_INTERVAL=3000
KAFKA_MAX_BYTES_PER_PARTITION=1048576

# Monitoring
METRICS_PORT=9090
HEALTH_CHECK_TIMEOUT=5000