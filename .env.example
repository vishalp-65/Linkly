# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_HOST=your-database-host.com
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=30000
# For SSL certificate, either set DB_SSL_CA or place ca.pem file in root
DB_SSL_CA=

# Redis Configuration
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100

# Security (Generate strong secrets in production)
JWT_SECRET=generate-a-strong-secret-at-least-32-characters-long
JWT_REFRESH_SECRET=generate-a-strong-refresh-secret-at-least-32-characters-long
API_KEY_SECRET=generate-a-strong-api-key-secret-at-least-32-characters-long
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Analytics (Optional - leave as localhost if not using Kafka)
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_CLICKS=url_clicks
KAFKA_CLIENT_ID=url-shortener-api

# Monitoring
METRICS_PORT=9090
HEALTH_CHECK_TIMEOUT=5000

# Tracing (Optional)
JAEGER_ENDPOINT=http://localhost:14268/api/traces
ZIPKIN_ENDPOINT=http://localhost:9411/api/v2/spans
TRACING_ENABLED=false

# CORS (Production - comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://your-frontend-domain.com
